<h1>Nueva Pregunta</h1>

<%= form_for :question, url: questions_path do |f| %>

    <p>
      <%= f.label :question %><br>
      <%= f.text_area :question %>
    </p>

    <p>
      <%= f.label :answer1 %><br>
      <%= f.text_field :answer1 %>
    </p>

    <p>
      <%= f.label :answer2 %><br>
      <%= f.text_field :answer2 %>
    </p>

    <p>
      <%= f.label :answer3 %><br>
      <%= f.text_field :answer3 %>
    </p>

    <p>
      <%= f.label :answer4 %><br>
      <%= f.text_field :answer4 %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>