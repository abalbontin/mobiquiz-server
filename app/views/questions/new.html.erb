<h1>Nueva Pregunta</h1>

<%= form_for :question, url: questions_path do |f| %>
    <% if @question.errors.any? %>
        <div id="errorExplanation">
          <h2><%=  pluralize(@question.errors.count, "error") %> impide crear la pregunta:</h2>
          <ul>
            <% @question.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :question %><br>
      <%= f.text_area :question %>
    </p>

    <p>
      <%= f.label :answer1 %><br>
      <%= f.text_field :answer1 %>
    </p>

    <p>
      <%= f.label :answer2 %><br>
      <%= f.text_field :answer2 %>
    </p>

    <p>
      <%= f.label :answer3 %><br>
      <%= f.text_field :answer3 %>
    </p>

    <p>
      <%= f.label :answer4 %><br>
      <%= f.text_field :answer4 %>
    </p>

    <p>
      <%= f.label :solution %><br>
      <%= f.text_field :solution %>
    </p>

    <p>
      <%= f.label :difficulty %><br>
      <%= f.text_field :difficulty %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

